@page
@model EmployeesManagementSystem.Pages.editModel
@{
    ViewData["Title"] = "edit";
}

<h1>edit customer</h1>
@if (Model.errorMessage.Length > 0)
{
<div class="alert alert-warning alert-dismissible fase show" role="alert">
    <strong>@Model.errorMessage</strong>
</div>
}
<form method="post">
    <input type="hidden" name="id" value="@Model.selectedCustomer.id" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">customer name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="customerName" value="@Model.selectedCustomer.name" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">customer number</label>
        <div class="col-sm-6">
            <input type="number"  required title="9 chars exactly" class="form-control" name="customerNumber" value="@Model.selectedCustomer.customerNumber" />
        </div>
    </div>
    
    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fase show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/">Cancel</a>
        </div>
    </div>
</form>

